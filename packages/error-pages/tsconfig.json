{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "lib": ["ES2021"],
    "module": "commonjs",
    "target": "ES2021",
    "sourceMap": true,
    "experimentalDecorators": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "exclude": ["node_modules"],
  "files": [
    "./src/index.ts"
  ]
}
