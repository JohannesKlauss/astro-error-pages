{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "space",
		"indentSize": 2,
		"lineWidth": 80,
		"ignore": []
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingComma": "es5",
			"semicolons": "asNeeded"
		}
	}
}
